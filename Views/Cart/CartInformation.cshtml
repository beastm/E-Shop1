@model Eshop.Models.Basket
<div class="container">

    <div>

        @using (Html.BeginForm("CartShipping", "Cart", FormMethod.Get))
        {

            <div class="row col-12">
                <div class="col-6">

                    <h4 style="float:left" class="modal-title">DEBRA</h4>
                    <br />
                    <br />
                    <div class="row" style="margin-left:12px">
                        <p style="color:pink">Cart</p>&nbsp;
                        <p>></p>&nbsp;
                        <p style="color:pink">Information</p> &nbsp;
                        <p>></p>&nbsp;
                        <p>Shipping</p>
                        <p>></p>&nbsp;
                        <p>Payment</p>
                    </div>
                    <div class="row">

                        <div class="container">
                            <br />
                            <br />
                            <table class="table table-bordered">
                                <tr>
                                    <th>Contact</th>
                                    <td>teste@email.com</td>
                                    <td style="color:red"><a href="#">Change</a></td>
                                </tr>
                                <tr>
                                    <th>Ship to</th>
                                    <td>sdsadasdsa, Czech republic</td>
                                    <td style="color:red"><a href="#">Change</a></td>
                                </tr>
                            </table>
                            <br />
                            <br />
                            <h5>Shipping  method</h5>
                            <input type="text" value="Standart" class="form-control" disabled />
                            <br />
                            <br />
                            <div class="row col-12">
                                <div class="col-6">
                                    <a href="@Url.Action("Cart", "Cart")"> &nbsp;<p style="color:pink">Return to Information</p></a>
                                </div>
                                <div style="float:right">
                                    <button class="btn btn-danger" type="submit" id="btnMyModalSecond">Continue to payment</button>

                                </div>
                            </div>

                        </div>




                    </div>



                </div>
                <div class="col-6 jumbotron">
                    <br />
                    <br />
                    @{
                        foreach (var item in Model.ProductList)
                        {
                            <div class="row col-12">
                                <div class="col-2">
                                    <img src="@item.Photo" width="50" />
                                </div>
                                <div class="col-6">
                                    <p>@item.ProdName</p>
                                </div>
                                <div class="col-4">
                                    <p>@item.Price $</p>
                                </div>
                            </div>
                        }

                    }
                    <br />
                    <hr />
                    <br />
                    <div class="row col-12">
                        <div class="col-4">
                            Subtotal
                        </div>
                        <div>
                            @Model.TotalPrice
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-4">
                            Shipping
                        </div>
                        <div>
                            Calculated at next step
                        </div>
                    </div>


                    <br />
                    <hr />
                    <br />
                    <div class="row col-12">
                        <div class="col-8">
                            <h3>Total</h3>

                        </div>
                        <div>
                            <h6>USD &nbsp; $@Model.TotalPrice</h6>
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
</div>









